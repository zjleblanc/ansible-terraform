<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>Ansible + Terraform Demo (AWS)</title>
        <meta name="description" content="Demo using Terraform to deploy AWS EC2 instances and Ansible to configure a web server.">
        <meta name="author" content="Zachary LeBlanc">

        <meta property="og:title" content="Ansible + Terraform Demo">
        <meta property="og:type" content="website">
        <meta property="og:description" content="Demo using Terraform to deploy AWS EC2 instances and Ansible to configure a web server.">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        <style>
            .wrapper { margin-top: 20px; display: flex; flex-direction: column; align-items: center; gap: 20px; }
            .wrapper .list-vm-info { max-width: 100vw; min-width: 50vw; }
            .badge.rounded-pill { margin-right: 8px; }
            .break { flex-basis: 100%; height: 0; }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light justify-content-between">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                <span style="margin-left: 4px">Ansible + Terraform Demo (AWS)</span>
                </a>
                <span class="navbar-text" style="color: grey">
                <i>{{ subtitle }}</i>
                </span>
            </div>
        </nav>
        <div class="wrapper">
            <ul class="list-group list-vm-info">
                {% for kvp in info_list_kvpairs %}
                {% if kvp['key'] != 'tags' %}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  <div class="ms-2 me-auto">
                    <div class="fw-bold">{{ kvp['value'] | default('unknown') }}</div>
                    {{ kvp['key'] }}
                  </div>
                </li>
                {% elif tags is defined and tags | length > 0 %}
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  <div class="ms-2 me-auto">
                    <div>
                        {% for tag in kvp['value'] %}
                        <span class="badge rounded-pill bg-primary">{{ tag['key'] }}:{{ tag['value'] }}</span>
                        {% endfor %}
                    </div>
                    {{ kvp['key'] }}
                  </div>
                </li>
                {% endif %}
                {% endfor %}
              </ul>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
